{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ], // Khai báo các Sink sẽ dùng
    "MinimumLevel": {
      "Default": "Information", // Mức log tối thiểu
      "Override": {
        "Microsoft": "Warning", // Ghi đè: Chỉ ghi log từ Microsoft ở mức Warning trở lên
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console" // Ghi ra Console
      },
      {
        "Name": "File", // Ghi ra File
        "Args": {
          "path": "Logs/log-.txt", // Đường dẫn file log
          "rollingInterval": "Day", // Tạo file mới mỗi ngày (log-20241031.txt)
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "retainedFileCountLimit": 7 // Giữ lại log của 7 ngày gần nhất
        }
      },
      {
        "Name": "Http",
        "Args": {
          "requestUri": "%Logstash__Url%", // <-- Đọc URL từ biến môi trường
          "queueLimit": 1000
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ], // Làm giàu log
    "Properties": {
      "Application": "ShopCoApi" // Thêm một thuộc tính "Application" vào tất cả các log
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=ShopCoApiDb;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "JWT": {
    "ValidAudience": "http://localhost:7137",
    "ValidIssuer": "http://localhost:7137",
    "Secret": "jkshdjfjshfsjfhfshffjkshfsdkhjfshfshfkhjhfsjhh"
  },
  "AllowedHosts": "*"
}
